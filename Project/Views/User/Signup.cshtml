@model UserViewModel

<form asp-controller="User" asp-action="Signup" method="post">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="UserName" class="form-label">User Name : </label>
        <input asp-for="UserName" class="form-control">
        <div class="mb-3">
        <label asp-for="FullName" class="form-label">Full Name : </label>
        <input asp-for="FullName" class="form-control"placeholder="Use space between name and surname">
        </div>
        <div class="mb-3">
        <label asp-for="Email" class="form-label">E-Mail : </label>
        <input asp-for="Email" class="form-control">
        </div>
        <div class="mb-3">
        <label asp-for="Password" class="form-label">Password: </label>
        <input asp-for="Password" class="form-control">
        </div>
        <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label">Confirm Password: </label>
        <input asp-for="ConfirmPassword" class="form-control">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
</form>