@model EditViewModel

<form asp-controller="User" asp-action="EditUser" method="post">
    <div asp-validation-summary="All"></div>
    <input type="hidden" name="Id" value="@Model.UserID">
    <div class="mb-3">
        <label asp-for="UserName" class="form-label">User Name : </label>
        <input asp-for="UserName" class="form-control">
        <div class="mb-3">
        <label asp-for="Email" class="form-label">E-Mail : </label>
        <input asp-for="Email" class="form-control">
        </div>
        <div class="mb-3">
        <label asp-for="Password" class="form-label">Password: </label>
        <input asp-for="Password" class="form-control">
        </div>
        <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label">Confirm Password: </label>
        <input asp-for="ConfirmPassword" class="form-control">
        </div>
        <div class="mb-3">
        <label asp-for="Password" class="form-label">Roles : </label>
        @foreach( var role in ViewBag.Roles){
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="SelectedRoles" 
                value="@role" id="@role"
                @(Model.SelectedRole.Any(i => i == role) ? "checked" : ""); >
                <label for="@role"class="form-check-label">@role</label>
            </div>

        }
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Confirm</button>
</form>